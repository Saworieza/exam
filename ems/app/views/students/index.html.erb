<div>
  <div class='students'>
    <div class='inner-header'>
      <div class='inner-title'>Students</div>
      <div class='inner-button'><%= link_to 'New +', new_student_path %></div>
    </div>
    <div class='inner-content'>
      <table class='student-table'>
        <thead>
          <tr>
            <th>TXStateID</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Major</th>
            <th>Email</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td><%= student.txstateid %></td>
              <td><%= student.first_name %></td>
              <td><%= student.last_name %></td>
              <td><%= student.major %></td>
              <td><%= student.email %></td>
              <td><%= link_to fa_icon('eye'), student, class: 'link' %></td>
              <td><%= link_to fa_icon('pencil-square-o'), edit_student_path(student), class: 'link' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
