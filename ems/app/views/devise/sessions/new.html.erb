<div class='login-box'>
  <div class='login-form'>
    <h1>Login</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class='row'>
        <%= render partial: 'layouts/notices' %>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :username, autofocus: true, placeholder: 'Username', class: 'validate'  %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'validate' %>
        </div>
      </div>
      <button class="btn-large waves-effect waves-light" type="submit" name="action">Sign in
        <%= fa_icon('sign-in', class: 'right') %>
      </button>
    <% end %>
  </div>
</div>
