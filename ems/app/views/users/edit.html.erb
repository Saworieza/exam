<div>
  <div class='exams'>
    <div class='inner-header'>
      <div class='inner-title'>Change Password</div>
    </div>
    <div class='inner-content'>
      <%= form_for(@user, url: update_password_users_path ) do |f| %>
        <div class='row'>
          <div class='col s8'>
            <div class='row'>
              <div class='input-field col s12'>
                <%= f.password_field :password, autocomplete: :off, required: '', :'aria-required' => true  %>
                <%= f.label :password %>
              </div>
            </div>
            <div class='row'>
              <div class='input-field col s12'>
                <%= f.password_field :password_confirmation, required: '', :'aria-required' => true %>
                <%= f.label :password_confirmation %>
              </div>
            </div>
            <div class='row'>
              <div class='actions'>
                <button class="btn-large waves-effect waves-light" type="submit" name="action">
                  Save
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
